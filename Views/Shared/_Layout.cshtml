    </div>
    <div id="myjs"></div>
    <div id="footer"></div>
    @RenderBody()
    <input type="hidden" id="page_id" value="wait" />
    <input type='hidden' id="bf_ubt_orderid" value="" />
    <script type="text/javascript" src="http://webresource.c-ctrip.com/code/lizard/2.1/web/lizard.seed.js" pdConfig="/webapp/myctrip/webresource/config.js" lizardConfig="lizardCatch:'off'"></script>
    <script>
        if (navigator.userAgent.match(/CtripLite/i)) { $("#footer").hide(); }

        //H5中，特殊分辨率的pad，切换横竖屏时reload页面（只有当长宽中的某一个小于768时，横竖屏切换时才需要刷新。因为此时切换前后一个是H5界面，一个是Pad界面）
        if (!Lizard.isHybrid) {
            if (document.body.clientWidth < 768 && document.body.clientHeight > 767 || document.body.clientWidth > 767 && document.body.clientHeight < 768) {
                window.addEventListener('orientationchange', function (e) {
                    window.location.reload();
                });
            }
        }

        // 在pc上拖动浏览器窗口可以自动刷新页面，使用相应分辨率下的样式
        var callback= function() {
            window.location.reload();
        };
        var widthMatchMax768 = window.matchMedia("(max-width: 768px)");
        var widthMatchMin768 = window.matchMedia("(min-width: 768px)");
        if (widthMatchMax768.matches) {
            widthMatchMax768.addListener(callback);
        } else if (widthMatchMin768.matches) {
            widthMatchMin768.addListener(callback);
        }

        //Hybrid和H5中左侧菜单栏的高度不同，Hybrid中为0，H5中为44（header的高度）。我携首页由于没有header，所以都为0
        if (!Lizard.isHybrid&&$(window).width() > 767 && !document.getElementById('pad_index')) {
            var head = document.getElementsByTagName('head')[0];
            var temp = document.createElement('style');
            temp.rel = 'stylesheet';
            temp.type = 'text/css';
            temp.textContent = '#ctripmenu-wrap{top:44px;}';
            head.appendChild(temp);
        }
        //更多页面兼容
        if (window.LizardLocalroute) {
            window.LizardLocalroute["more"] = "views/more/index";
            window.LizardLocalroute["more/index"] = "views/more/index";
        }
    </script>
