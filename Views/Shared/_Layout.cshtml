<body onselectstart="return false" class="page-myctrip-order">
    <!--默认头部配置-->
    <script type="text/javascript">
        var globalConfig = {
            //bt类型，默认为default,没有一二级频道选中，若需选中一二频道请联系（R&D 基础业务 用户中心-用户组成员）
            BusinessType: 'default',
            //环境选'other'即可
            Environment: 'other',
            //判断是否需要登录，如果LoginType = ‘notload’则表示无需登录态；其他的情况，则是登录态（默认default，需要登录）
            LoginType: 'default',
            //3.0对应响应式版本
            Version: '3.0'
        };

        //判断当前环境
        //        hybrid    h5
        //online   /         0
        //pad      10       11
        //mobile   20       21

        var deviceEnv = deviceEnv();
        deviceEnv = (deviceEnv === 0 || deviceEnv === 11) ? (location.search.indexOf('for=test') != -1 ? 0 : 11) : deviceEnv;
        if (typeof deviceEnv != 'undefined') {
            window.deviceEnv = deviceEnv;
            fnMediaQuery();
        }
        window.isShowSlideMenu = deviceEnv === 0 || deviceEnv === 10||deviceEnv === 11;

        function fnMediaQuery() {
            var queries = document.querySelectorAll('.mediaquery'), all = queries.length, cur = null, attr = null, media = '';
            while (all--) {
                cur = queries[all];
                media = typeof cur.dataset === 'undefined' ? cur.getAttribute("data-media") : cur.dataset.media;
                media = media ? media.split(',') : [];
                if (media.indexOf('' + deviceEnv) > -1) {
                    for (attr in cur.dataset) {
                        if (attr !== 'media') {
                            cur.setAttribute(attr, cur.dataset[attr]);
                        }
                    }
                }
            }
        };

        function deviceEnv() {
            var ua = navigator.userAgent;
            var padRegex = /ipad|android/i;
            var bInApp = false;
            var data = window.localStorage.getItem('isInApp') || window.localStorage.getItem('ISINAPP');
            var isPadApp = ua.match(/Ctrip_Pad_App/i);
            var _width = document.body.clientWidth;
            var isOnline, rv;

            if (ua.indexOf('CtripWireless') > -1) {
                bInApp = true;
            }
            if (data) {
                bInApp = data == '1';
            }

            isOnline = !bInApp && !padRegex.test(ua) && _width > 767;

            if (isOnline) {
                rv = 0;
            }
            else if (isPadApp) {
                rv = 10;
            }
            else if (padRegex.test(ua) && _width > 767) {
                rv = 11;
            }
            else if (bInApp && _width < 768) {
                rv = 20;
            }
            else{
                rv = 21;
            }
            return rv;
        }

    </script>
    <div id="header"></div>
    <div id="headerview"></div>
    <div id="main" class="h100">
        <div class="main-frame myctrip_wrap">
